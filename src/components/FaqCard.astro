---
// FaqCard.astro
const { question, answer } = Astro.props;
---

<div
  class="faq-card text-left border border-gray-200 rounded-lg p-4 mb-4 cursor-pointer transition duration-300 ease-in-out hover:bg-gray-50"
  x-data="{ isOpen: false }"
  @click="isOpen = !isOpen"
>
  <h3 class="text-lg font-semibold text-gray-700">{question}</h3>
  <div class="mt-2 text-gray-600" x-show="isOpen" x-transition>
    {answer}
  </div>
</div>
